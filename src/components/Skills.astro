---
import { skillCategories } from "../lib/framework";
---

<section id="skills" class="py-20 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
        Mis <span class="text-gradient">Habilidades</span>
      </h2>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto">
        Tecnologías que domino y utilizo en mis proyectos
      </p>
    </div>

    <!-- Skills Categories -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {
        skillCategories.map((category) => (
          <div class="glass p-8 rounded-2xl group hover:scale-105 transition-all duration-300">
            <div class="flex items-center mb-6">
              <div
                class={`w-12 h-12 rounded-lg bg-gradient-to-br ${category.gradient} flex items-center justify-center mr-4`}
              >
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <Fragment set:html={category.icon} />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white">{category.title}</h3>
            </div>{" "}
            <div class="grid grid-cols-2 gap-3">
              {category.technologies.map((tech) => (
                <div
                  class={`bg-slate-800/50 rounded-lg p-3 text-center hover:${category.hoverColor} transition-colors duration-300 flex flex-col items-center space-y-2 relative group`}
                >
                  <img
                    src={tech.icon}
                    alt={tech.name}
                    class="w-8 h-8"
                    style={`color: ${tech.color}`}
                  />
                  <span class="text-slate-300 font-medium text-sm">
                    {tech.name}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
    <!-- Call to Action -->
    <div class="text-center mt-16">
      <a
        href="#contact"
        class="inline-flex items-center bg-gradient-to-r from-cyan-500 to-purple-500 hover:from-cyan-600 hover:to-purple-600 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
      >
        ¿Trabajamos juntos?
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
