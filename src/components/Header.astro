<header
  class="fixed top-0 left-0 right-0 z-50 glass transition-all duration-300"
>
  <nav
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16"
  >
    <!-- Logo -->
    <a
      href="/"
      class="text-xl font-bold text-gradient-blue hover:scale-105 transition-transform duration-200"
    >
      BC
    </a>

    <!-- Toggle para móvil -->
    <input type="checkbox" id="menu-toggle" class="peer hidden" />
    <label
      for="menu-toggle"
      class="md:hidden block cursor-pointer hover:text-white p-2 rounded-md transition-colors duration-200"
      style="color: var(--color-text);"
    >
      <svg
        class="h-6 w-6"
        stroke="currentColor"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </label>

    <!-- Menú ÚNICO responsive -->
    <div
      class="peer-checked:flex hidden md:flex flex-col md:flex-row absolute md:static top-16 left-0 w-full md:w-auto glass md:bg-transparent rounded-b-xl md:rounded-none px-4 md:px-0 py-4 md:py-0 space-y-4 md:space-y-0 md:space-x-6 transition-all duration-300"
    >
      <a
        href="/"
        class="block hover:text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-white/10 transition"
        style="color: rgba(255, 255, 255, 0.7);"
      >
        Sobre mí
      </a>
      <a
        href="#skills"
        class="block hover:text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-white/10 transition"
        style="color: rgba(255, 255, 255, 0.7);"
      >
        Habilidades
      </a>
      <a
        href="#projects"
        class="block hover:text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-white/10 transition"
        style="color: rgba(255, 255, 255, 0.7);"
      >
        Proyectos
      </a>
      <a
        href="#contact"
        class="block text-white px-4 py-2 rounded-lg text-sm font-medium hover:scale-105 hover:shadow-lg transition-all duration-200"
        style="background: linear-gradient(to right, var(--color-accent-red), var(--color-purple));"
      >
        Contáctame
      </a>
    </div>
  </nav>
</header>
